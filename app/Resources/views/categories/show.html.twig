{% extends 'base.html.twig' %}

{% block body %}
    <h1>categories</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categories.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categories.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('categories_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('categories_edit', { 'id': categories.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
